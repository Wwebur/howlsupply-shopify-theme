}

.ajaxcart__qty-adjust {
  @extend .js-qty__adjust;
  color: $color-drawer-input-text;

  &:hover {
    background-color: adaptive-color($color-drawer-inputs, 15%);
  }

  &:active {
    background-color: adaptive-color($color-drawer-inputs, 15%);
  }
}

.ajaxcart__qty--plus {
  @extend .js-qty__adjust--plus;
}

.ajaxcart__qty--minus {
  @extend .js-qty__adjust--minus;
}

