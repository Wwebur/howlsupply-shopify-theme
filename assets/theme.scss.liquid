/*================ Modals ================*/
.modal {
  display: none;
  opacity: 0;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: $color-body;
  color: $color-body-text;
  @include transform(translateY(-20px));
  transition: all ease-in-out 0.2s;
  overflow: hidden;
}

.modal--is-active {
  display: block;
  opacity: 1;
  @include transform(translateY(0));
  overflow: hidden;
}

.modal__inner {
  height: 100%;
  @include prefix(transform-style, preserve-3d, moz webkit spec);
}

.modal__centered {
  position: relative;
  top: 50%;
  transform: translateY(-50%);

  .supports-no-csstransforms {
    top: 20%;
  }
}

.modal__close {
  position: fixed;
  top: $gutter-site;
  right: 0;
  padding: $gutter-site;
  border: 0;

  .icon {
    font-size: em(20);
  }
}

