/* HEADER */
#site-header {
  background: $howl-yellow;
  transition: background .3s linear, color .3s linear;
  position: fixed;
  z-index: 102;
  top: 0;
  left: 0;
  width: 100%;
  letter-spacing: .84px;
  text-transform: uppercase;
  color: $black;

  &.scroll {
    background: $howl-yellow;
  }

  &.dark {
    background: $black;
    color: $white;

    #header-bar--center {
      svg {
        path {
          fill: $white;
        }
      }  
    }
  }

  a {
    color: inherit;

    &:hover, &:focus {
      opacity: 1;
    }
  }

  #site-header--container {
    position: relative;
    z-index: 100;
  }

  #header-bar {
    display: flex;
    align-items: center;
    line-height: normal;
    font-size: 14px;

    #header-bar--left {
      flex: 1 calc((100% - 75px) / 2);
      min-height: $header_menu_height;
      display: flex;
      align-items: center;
      position: relative;

      @media (max-width: $screen-xs-max) {
        min-height: $header_menu_mobile_height;
      }

      @media (min-width: $screen-sm-min) {
        flex: 1 calc((100% - 285px) / 2);
      }

      .breadcrumb {
        position: absolute;
        left: 100px;
        letter-spacing: 0;
        text-transform: none;

        @media (max-width: $screen-sm-max) {
          display: none;
        }

        a:first-of-type {
          text-transform: uppercase;
        }
      }
    }

    #header-bar--center {
      min-height: $header_menu_height;
      flex: 0 285px;
      display: flex;
      align-items: center;
      justify-content: center;

      @media (max-width: $screen-xs-max) {
        min-height: $header_menu_mobile_height;
      }

      a {
        font-size: 0px;
      }

      svg {

        @media (max-width: $screen-xs-max) {
          margin-right: -15px;
          max-height: 18px;
          width: auto;
        }

        path {
          transition: fill .3s linear;
        }
      }
    }

    #header-bar--right {
      flex: 1 calc((100% - 75px) / 2);
      min-height: 64px;
      position: relative;
      display: flex;
      align-items: center;
      justify-content: flex-end;
      min-height: $header_menu_height;

      @media (max-width: $screen-xs-max) {
        min-height: $header_menu_mobile_height;
      }

      @media (min-width: $screen-sm-min) {
        flex: 1 calc((100% - 285px) / 2);
      }
    }

    .ss-nav--container {
      position: relative;
      z-index: 2;
    }

    .ss-nav {
      align-items: center;

      > li {
        margin-left: 20px;
        margin-bottom: 0px;
        position: relative;

        @media (max-width: $screen-xs-max) {
          font-size: 0px;
        }

        @media (min-width: $screen-sm-min) {
          margin-left: 40px;
        }

        @media (min-width: $screen-lg-min) {
          margin-left: 70px;  
        }

        &:first-child {
          margin-left: 0px;
        }

        &.cart {
          cursor: pointer;
          position: relative;         
          width: 60px;
          text-align: right;
          opacity: 1;
          visibility: visible;
          transition: all .3s linear;

          @media (max-width: $screen-xs-max) {
            margin-right: -15px;
            width: auto;
          }

          @media (min-width: $screen-lg-min) {
            margin-left: 100px;
          }

          &.hide-it {
            opacity: 0;
            visibility: hidden;
          }
        }

        > a {
          color: inherit;
          position: relative;
          padding-bottom: 0px;
          border-bottom: none;
          transition: color .2s linear;
        }
      }
    }    
  }

  #site-header--content-wrapper {
    position: relative;
  }

  #site-header.fixed {
    position: fixed;
  }

  .mobile-triggers {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: -24px;
    line-height: 1;
  } 

  .menu-icon {
    width: 46px;
    height: 34px;
    transform: rotate(0deg);
    transition: .4s ease-in-out;
    z-index: 10;
    cursor: pointer;
    display: inline-block;
    vertical-align: bottom;
    position: relative;

    @media (min-width: $screen-sm-min) {
      height: 40px;
    }

    &:after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
    
    span {
      display: block;
      position: absolute;
      height: 2px;
      width: 16px;
      background: $black;
      opacity: 1;
      left: 10px;
      transform: rotate(0deg);
      transition: .25s ease-in-out;

      @media (min-width: $screen-sm-min) {
        width: 26px;
      }

      &:nth-child(1) {
        top: 11px;
        transform-origin: left center;
      }

      &:nth-child(2) {
        top: 17px;
        transform-origin: left center;
      }

      &:nth-child(3) {
        top: 23px;
        transform-origin: left center;
      }
    }

    &.open {
      span {
        background: $white;
        width: 20px;

        &:nth-child(1) {
          transform: rotate(45deg);
            top: 9px;
            left: 13px;
        }

        &:nth-child(2) {
          width: 0%;
          opacity: 0;
        }

        &:nth-child(3) {
          transform: rotate(-45deg);
            top: 23px;
            left: 13px;
        }
      }
    }
  }
}


