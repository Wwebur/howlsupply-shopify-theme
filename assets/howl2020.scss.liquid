    left: -20px $i;
    top: 50% $i;
    transform: translateY(-50%) $i;
    width: 16px $i;
    height: 16px $i;

    svg {
      width: 16px $i;
      height: auto $i;

      circle {
        fill: transparent $i;
        stroke: transparent $i;
      }

      path {
        stroke: #a8a8a8 $i;
      }
    }
  }

  span.kl-private-reset-css-Xuajs1 {
    background: #f5f5f5 $i;
    border-radius: 50px $i;
    min-height: 34px $i;
    padding-left: 15px $i;
    background-image: url(teaser-arrow.svg) $i;
    background-repeat: no-repeat $i;
    background-position: right 15px center $i;

    p {
      text-align: left $i;
    }

    span {
      font-family: 'Parma' $i;
      font-weight: normal $i;
      font-size: 12px $i;
      color: #a8a8a8 $i;
    }
  }
}


.img-switch-on-mobile {
  transition: opacity .2s ease-in;
  
  @media (max-width: $screen-xs-max) {
    opacity: 0;
  }
}