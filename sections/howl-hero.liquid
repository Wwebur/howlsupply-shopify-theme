{%- render 'howl-hero',
  subtitle: section.settings.subtitle,
  title: section.settings.title,
  button_label: section.settings.button_label,
  link: section.settings.link,
  image: section.settings.image,
  image_mobile: section.settings.image_mobile,
  text_color: section.settings.text_color,
  max_width: section.settings.max_width,
  smaller_subtitle: section.settings.smaller_subtitle
-%}

{%- render 'section-margin-css',
  top_margin: section.settings.top_margin,
  bottom_margin: section.settings.bottom_margin,
  top_margin_mobile: section.settings.top_margin_mobile,
  bottom_margin_mobile: section.settings.bottom_margin_mobile -%}

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },  
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image - Desktop"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image - Mobile"
    },
    {
      "type": "header",
      "content": "Settings"
    },
    {
      "type": "checkbox",
      "id": "smaller_subtitle",
      "label": "Smaller Subtitle"
    },
    {
      "type": "select",
      "id": "text_color",
      "label": "Text Color",
      "options": [
        {
          "value": "white",
          "label": "White"
        },
        {
          "value": "black",
          "label": "Black"
        },
        {
          "value": "yellow",
          "label": "Yellow"
        }
      ]
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Maximum Width",
      "default": 400,
      "min": 300,
      "max": 800,
      "step": 5
    },
    {
      "type": "range",
      "id": "top_margin",
      "label": "Top Margin",
      "default": 0,
      "min": 0,
      "max": 200,
      "step": 5
    },
    {
      "type": "range",
      "id": "bottom_margin",
      "label": "Bottom Margin",
      "default": 0,
      "min": 0,
      "max": 200,
      "step": 5
    },
    {
      "type": "range",
      "id": "top_margin_mobile",
      "label": "Top Margin (Mobile)",
      "default": 0,
      "min": 0,
      "max": 200,
      "step": 5
    },
    {
      "type": "range",
      "id": "bottom_margin_mobile",
      "label": "Bottom Margin (Mobile)",
      "default": 0,
      "min": 0,
      "max": 200,
      "step": 5
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
